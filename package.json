{
	"name": "polarlabs-homepage",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"test:ci": "npm run check && npm run test:unit && npm run test:integration",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test --project chromium --project firefox",
		"test:unit": "vitest --passWithNoTests",
		"prepare": "husky"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^4.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.18",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^9.0.11",
		"postcss": "^8.4.35",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass": "^1.71.1",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-intersection-observer": "^1.0.0",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"browserslist": [
		"defaults",
		"last 4 versions",
		"Firefox ESR"
	],
	"dependencies": {
		"@sentry/sveltekit": "^8.9.2",
		"@square/svelte-store": "^1.0.18",
		"dotenv": "^16.4.5",
		"highlight.js": "^11.9.0",
		"isomorphic-dompurify": "^2.9.0",
		"remixicon": "^4.2.0",
		"slugify": "^1.6.6",
		"sveltekit-sitemap": "github:Joonel/sveltekit-sitemap"
	}
}
